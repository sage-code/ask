<!DOCTYPE html>
<html>
  <head>
    <title>Ruby Quiz App</title>
  </head>
  <body>
    <h1>Welcome to the Ruby Quiz App!</h1>

    <table>
      <thead>
        <tr>
          <th>Rank</th>
          <th>Language</th>
          <th>Popularity</th>
          <th>Select Language</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>1</td>
          <td>JavaScript</td>
          <td>1</td>
          <td><button>Start Quiz</button></td>
        </tr>
        <tr>
          <td>2</td>
          <td>Python</td>
          <td>2</td>
          <td><button>Start Quiz</button></td>
        </tr>
        <!-- ...and so on for the other languages -->
      </tbody>
    </table>

    <div class="quiz-modal" style="display:none;">
      <h2>Question 1</h2>
      <p>What does the acronym CSS stand for?</p>
      <ul>
        <li>A. Cascading Style Sheets</li>
        <li>B. Creative Style Syntax</li>
        <li>C. Command Sequence Spec</li>
      </ul>
      <button>Next Question</button>
    </div>

    <script>
      const startButtons = document.querySelectorAll('button');
      const modal = document.querySelector('.quiz-modal');
      const nextButton = modal.querySelector('button');
      const closeButton = modal.querySelector('.close-button');
      const backButton = modal.querySelector('.back-button');

      function startQuiz(event) {
        modal.style.display = 'block';
      }

      function nextQuestion(event) {
        // code to show next question
      }

      function closeQuiz(event) {
        modal.style.display = 'none';
      }

      function prevQuestion(event) {
        // code to show previous question
      }

      startButtons.forEach(button => {
        button.addEventListener('click', startQuiz);
      });

      nextButton.addEventListener('click', nextQuestion);
      closeButton.addEventListener('click', closeQuiz);
      backButton.addEventListener('click', prevQuestion);
    </script>
  </body>
</html>